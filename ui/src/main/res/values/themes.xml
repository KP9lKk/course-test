<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Course" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>

    <style name="Theme.Course" parent="Base.Theme.Course" />

    <style name="Android.HeadLine" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineHeight">36dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Android.Title.Medium" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:lineHeight">18dp</item>
        <item name="android:letterSpacing">0.015</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Android.Title.Large" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineHeight">28dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Android.Body.Medium" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineHeight">20dp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Android.Body.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>
    <style name="Android.SearchView.Body" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineHeight">18dp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Android.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineHeight">14dp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>
    <style name="Android.Button.Small" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:lineHeight">15dp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>
    <style name="Android.Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:lineHeight">20dp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="CourseButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/course_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Android.Button</item>
    </style>
    <style name="AuthTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAppearance">@style/Android.Title.Medium</item>
    </style>
    <style name="AuthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/Android.Body.Medium</item>
        <item name="android:background">@drawable/auth_edit_text_background</item>
        <item name="android:textColor">@color/white_opacity50</item>
        <item name="android:textColorHint">@color/white_opacity50</item>
        <item name="android:minHeight">40dp</item>
    </style>
</resources>